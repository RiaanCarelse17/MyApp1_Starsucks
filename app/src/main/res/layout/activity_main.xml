<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="230dp"
        android:layout_height="218dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/starsuckslogo" />

    <TextView
        android:id="@+id/txtOrderNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/order_now"
        android:textColor="@color/starbucks_green"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ss_1"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sb1" />

            <ImageView
                android:id="@+id/ss_2"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sb2" />

            <ImageView
                android:id="@+id/ss_3"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sb3" />

            <ImageView
                android:id="@+id/ss_4"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sb4" />

            <ImageView
                android:id="@+id/ss_5"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sb5" />

            <ImageView
                android:id="@+id/ss_6"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/sb6" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>